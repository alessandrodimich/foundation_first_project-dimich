<% @title = "Sign up" %>
<% set_current_model(@user)%>

<%= render 'shared/errors' %>

<h2 class="text-center">Please sign up</h2>
<%= form_for(@user) do |f| %>

  <div class="row">
    <div class="small-12 columns small-centered form-width">
      <label for="first Name" class="text-center">First Name</label>
      <%= f.text_field :first_name, :placeholder =>  first_name_errors(@user) %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns small-centered form-width">
      <label for="last Name" class="text-center">Last Name</label>
      <%= f.text_field :last_name, :placeholder =>  last_name_errors(@user) %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns small-centered form-width">
      <label for="user Name" class="text-center">User Name</label>
      <%= f.text_field :user_name, :placeholder =>  user_name_errors(@user) %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns small-centered form-width">
      <label for="email" class="text-center">Email</label>
      <%= f.text_field :email, :placeholder =>  email_errors(@user) %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns small-centered form-width">
      <label for="password" class="text-center">Password</label>
      <%= f.text_field :password, :placeholder =>  password_errors(@user) %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 small-centered columns text-center form-width">
      <%= f.submit "Create my account", class: "button" %>
  </div>

<% end %>



