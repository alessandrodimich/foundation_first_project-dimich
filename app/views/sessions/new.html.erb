<% @title = "Sign in" %>

<h2 class="text-center">Log In</h2>

<%= form_tag sessions_path role: "form" do %>


<div class="row">
  <div class="small-12 columns small-centered form-width">
      <label for="email" class="text-center">Email Address</label>
      <%= email_field_tag :email, params[:email],:label => "EMAIL" ,:placeholder => "Email", :id => "email" %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns small-centered form-width">
    <label for="password" class="text-center">Password</label>
    <%= password_field_tag :password, params[:password], :placeholder => "Password", :id => "password" %>
  </div>
</div>

<div class="row">
  <div class="small-12 small-centered columns text-center form-width">
    <%= submit_tag "Log in", class: "button" %>
  </div>

</div>


  <div class="row">
    <div class="small-12 columns small-centered form-width text-center">
      <%= check_box_tag :remember_me, params[:remember_me], :checked => true   %><label for="checkbox1">Remember me</label>
    </div>
  </div>

  <% end %>

<br><br>

    <div class="row">
    <div class="small-12 columns small-centered">
<p class="small text-center">Forgotten password? <%= link_to "click here to reset it!", reset_password_path %></p>
    </div>
  </div>






